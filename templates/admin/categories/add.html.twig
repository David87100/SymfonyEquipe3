{% extends 'base.html.twig' %}

{% block title %} Ajouter une categorie {% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}">{% endblock %}

{% block body %}
<section>
{% include "admin/navAdmin.html.twig" %}
    <main>
        {{ form_start(form, {'attr': {'class': 'categories_form'}}) }}
        <h2>Ajouter une categorie : </h2>

        {{ form_row(form.name) }}
        {{ form_row(form.categoryOrder) }}
        {{ form_row(form.parent) }}

        <button type="submit">Enregistrer</button>
        {{ form_end(form) }}
    </main>

</section>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/resetpassword.css') }}">{% endblock %}

{% block body %}
    <section class="resetPassword">
        <div class="row">
            <div class="col">
                {{ form_start(requestPassForm) }}
                <h1>Réinitialisation du mot de passe</h1>
                {{ form_row(requestPassForm.email) }}
                <button type="submit" class="btn btn-primary">Envoyer</button>
                {{ form_end(requestPassForm) }}
            </div>
        </div>
    </section>

{% endblock %}